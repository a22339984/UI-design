<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="ffff"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="437dp"
        android:layout_height="254dp"
        android:background="@drawable/profilesettingcorner"
        tools:layout_editor_absoluteX="-9dp"
        tools:layout_editor_absoluteY="-4dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="89dp"
            android:layout_height="82dp"
            android:src="@mipmap/ic_usericon_foreground"
            app:riv_border_color="#333333"
            app:riv_oval="true"
            tools:layout_editor_absoluteX="174dp"
            tools:layout_editor_absoluteY="99dp" />

        <Button
            android:id="@+id/btn_edit"
            style="@style/btn_edit"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:textColor="#73AF00"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="247dp"
            tools:layout_editor_absoluteY="181dp" />

        <Button
            android:id="@+id/btn_setback"
            style="@style/btn_setback"
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:textColor="#73AF00"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="5dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="198dp"
            tools:layout_editor_absoluteY="190dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="設定"
            android:textColor="#65C2BE"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="199dp"
            tools:layout_editor_absoluteY="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="492dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="238dp">

        <Button
            android:id="@+id/btn_chapassword"
            style="@style/btn_chapassword"
            android:layout_width="203dp"
            android:layout_height="68dp"
            android:text="變更密碼"
            android:textColor="#707070"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="85dp" />

        <Button
            android:id="@+id/btn_chapersoninfo"
            style="@style/btn_chapersoninfo"
            android:layout_width="245dp"
            android:layout_height="62dp"
            android:text="修改個人資料"
            android:textColor="#707070"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="154dp" />

        <Button
            android:id="@+id/btn_info"
            style="@style/btn_info"
            android:layout_width="228dp"
            android:layout_height="64dp"
            android:text="說明"
            android:textColor="#707070"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="218dp" />

        <Button
            android:id="@+id/btn_logout"
            style="@style/btn_logout"
            android:layout_width="228dp"
            android:layout_height="64dp"
            android:text="登出"
            android:textColor="#707070"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="283dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>