<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guibackcolor"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="412dp"
        android:layout_height="513dp"
        android:background="@drawable/layoutcorner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="177dp">

        <Button
            android:id="@+id/btn_taiwan"
            style="@style/btn_taiwan"
            android:layout_width="136dp"
            android:layout_height="113dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="2dp" />

        <Button
            android:id="@+id/btn_japan"
            style="@style/btn_japan"
            android:layout_width="126dp"
            android:layout_height="118dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="129dp" />

        <Button
            android:id="@+id/btn_hongkong"
            style="@style/btn_hongkong"
            android:layout_width="136dp"
            android:layout_height="113dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="214dp"
            tools:layout_editor_absoluteY="39dp" />

        <Button
            android:id="@+id/btn_italy"
            style="@style/btn_italy"
            android:layout_width="136dp"
            android:layout_height="113dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="247dp" />

        <Button
            android:id="@+id/btn_random"
            style="@style/btn_random"
            android:layout_width="109dp"
            android:layout_height="126dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="276dp"
            tools:layout_editor_absoluteY="282dp" />

        <Button
            android:id="@+id/btn_idea"
            style="@style/btn_idea"
            android:layout_width="109dp"
            android:layout_height="126dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="371dp" />

        <Button
            android:id="@+id/btn_korea"
            style="@style/btn_korea"
            android:layout_width="136dp"
            android:layout_height="113dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="169dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="412dp"
        android:layout_height="56dp"
        android:background="@color/yellow"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp">

        <Button
            android:id="@+id/btn_skip"
            style="@style/btn_skip"
            android:layout_width="54dp"
            android:layout_height="37dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="跳題"
            android:textColor="#FAF9F9"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.684" />

        <Button
            android:id="@+id/btn_preivew"
            style="@style/btn_preview"
            android:layout_width="54dp"
            android:layout_height="37dp"
            android:text="預覽"
            android:textColor="#FAF8F8"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_skip"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.684" />

        <Button
            android:id="@+id/btn_back"
            style="@style/btn_back"
            android:layout_width="53dp"
            android:layout_height="77dp"
            android:textColor="#FAF8F8"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="-31dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您吃了哪種料理？"
        android:textColor="#8C5A5A"
        android:textSize="33sp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="96dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="390dp"
        android:layout_height="24dp"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/progressbar"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="701dp" />

</androidx.constraintlayout.widget.ConstraintLayout>